<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="andrewtait1504693.rockclimbingapp.Home">

    <!-- TODO: Update blank fragment layout -->

    <!-- A CardView that contains a TextView -->


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="340dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/btnViewRoutes"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="95dp"
        android:layout_marginTop="79dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textTotalRoutes"
                android:layout_alignBottom="@+id/textTotalRoutes"
                android:layout_toLeftOf="@+id/textView8"
                android:layout_toStartOf="@+id/textView8"
                android:text="Total Routes" />

            <TextView
                android:id="@+id/textTotalRoutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="34dp"
                android:layout_toEndOf="@+id/textView8"
                android:layout_toRightOf="@+id/textView8"
                android:text="[MAX]" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:text="Statistics " />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="308dp"
                android:layout_height="93dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="29dp"
                android:layout_marginTop="24dp"
                android:text="Welcome!"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="18dp"
                android:text="Average Grade" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView14"
                android:layout_alignBottom="@+id/textView14"
                android:layout_alignLeft="@+id/textTotalRoutes"
                android:layout_alignStart="@+id/textTotalRoutes"
                android:text="[AVG]" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView17"
                android:layout_alignBottom="@+id/textView17"
                android:layout_alignLeft="@+id/textView15"
                android:layout_alignStart="@+id/textView15"
                android:text="[BEST]" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView14"
                android:layout_alignStart="@+id/textView14"
                android:layout_below="@+id/textView14"
                android:layout_marginTop="22dp"
                android:text="Best Grade" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnViewRoutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:background="@color/button"
        android:onClick="onClick"
        android:text="View Route"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btnAddRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnViewRoutes"
        android:layout_alignBottom="@+id/btnViewRoutes"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:background="@color/button"
        android:onClick="onClick"
        android:text="Add Route"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
