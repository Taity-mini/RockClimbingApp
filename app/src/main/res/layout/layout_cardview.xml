<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTemplate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp">

        <TextView
            android:id="@+id/card_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="ROUTE NAME"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardLocationtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/card_Location"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/card_Location"
            android:text="LOCATION"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_Name"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/cardLocationtxt"
            android:layout_toRightOf="@+id/cardLocationtxt"
            android:text="[LOCATION]"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/card_dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="DATE"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/card_Location"
            android:layout_alignStart="@+id/card_Location"
            android:layout_centerVertical="true"
            android:text="[DATE]"
            android:textSize="18sp" />

        <Button
            android:id="@+id/card_btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/card_btnView"
            android:layout_alignBottom="@+id/card_btnView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@color/button"
            android:text="Edit"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/card_btnView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_Location"
            android:layout_marginTop="50dp"
            android:layout_toLeftOf="@+id/card_btnEdit"
            android:layout_toStartOf="@+id/card_btnEdit"
            android:background="@color/button"
            android:text="View"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

</android.support.v7.widget.CardView>