<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="andrewtait1504693.rockclimbingapp.ViewRoute">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:id="@+id/ViewRouteCard"
        android:layout_width="match_parent"
        android:layout_height="323dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/viewRouteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:text="[ROUTE NAME]"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/viewRouteStyle"
                android:layout_alignEnd="@+id/viewRouteStyle" />

            <Button
                android:id="@+id/viewRouteEditBtn"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/dateLabel"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/dateLabel"
                android:background="@color/button"
                android:text="Edit"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/viewRouteLocationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:background="@color/button"
                android:text="Location"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/viewRouteName"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="Route Name:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gradeLabel"
                android:layout_alignStart="@+id/gradeLabel"
                android:layout_below="@+id/nameLabel"
                android:layout_marginTop="44dp"
                android:text="Route Location:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewRouteLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/locationLabel"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@+id/locationLabel"
                android:layout_toRightOf="@+id/locationLabel"
                android:text="[ROUTE_LOCATION]"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/viewRouteGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/viewRouteLocation"
                android:layout_alignStart="@+id/viewRouteLocation"
                android:layout_below="@+id/viewRouteLocation"
                android:layout_marginTop="38dp"
                android:text="[ROUTE GRADE]"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/gradeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/viewRouteGrade"
                android:layout_alignBottom="@+id/viewRouteGrade"
                android:layout_alignLeft="@+id/nameLabel"
                android:layout_alignStart="@+id/nameLabel"
                android:text="Route Grade"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewRouteDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/viewRouteStyle"
                android:layout_alignLeft="@+id/viewRouteGrade"
                android:layout_alignStart="@+id/viewRouteGrade"
                android:layout_marginBottom="14dp"
                android:text="[ROUTE DATE]"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/viewRouteDate"
                android:layout_alignBottom="@+id/viewRouteDate"
                android:layout_alignLeft="@+id/gradeLabel"
                android:layout_alignStart="@+id/gradeLabel"
                android:text="Route Date:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/styleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/viewRouteEditBtn"
                android:layout_alignLeft="@+id/locationLabel"
                android:layout_alignStart="@+id/locationLabel"
                android:layout_marginBottom="14dp"
                android:text="Route Style: "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewRouteStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/viewRouteDate"
                android:layout_alignStart="@+id/viewRouteDate"
                android:layout_alignTop="@+id/styleLabel"
                android:text="[ROUTE STYLE]"
                android:textSize="18sp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</FrameLayout>
